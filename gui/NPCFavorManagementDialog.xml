<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!--
    FS25_NPCFavor - Favor Management Dialog
    Shows active favors with ability to view, cancel, go to NPC, and complete
-->
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="900px 650px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">

            <!-- ===== TITLE AREA ===== -->
            <Text profile="fmTitle" id="titleText" position="0px -12px" text="Active Favors"/>
            <Text profile="fmSubtitle" id="subtitleText" position="0px -36px" text=""/>

            <!-- ===== HEADER DIVIDER ===== -->
            <Bitmap profile="fmDivider" position="0px -54px"/>

            <!-- ===== FAVOR ROW 1 ===== -->
            <Bitmap profile="fmRowBg" id="favor1bg" position="0px -70px" visible="false"/>
            <Text profile="fmNPCName" id="favor1npc" position="-420px -75px" text="" visible="false"/>
            <Text profile="fmDesc" id="favor1desc" position="-420px -95px" text="" visible="false"/>
            <Text profile="fmTime" id="favor1time" position="-420px -115px" text="" visible="false"/>
            <Text profile="fmReward" id="favor1reward" position="-420px -130px" text="" visible="false"/>
            <Button profile="fmButton" id="favor1view" position="300px -75px" text="View" onClick="onClickFavor1View" visible="false"/>
            <Button profile="fmButtonRed" id="favor1cancel" position="385px -75px" text="Cancel" onClick="onClickFavor1Cancel" visible="false"/>
            <Button profile="fmButton" id="favor1goto" position="300px -105px" text="Go To" onClick="onClickFavor1Goto" visible="false"/>
            <Button profile="fmButtonGreen" id="favor1complete" position="385px -105px" text="Done" onClick="onClickFavor1Complete" visible="false"/>

            <!-- ===== FAVOR ROW 2 ===== -->
            <Bitmap profile="fmRowBg" id="favor2bg" position="0px -155px" visible="false"/>
            <Text profile="fmNPCName" id="favor2npc" position="-420px -160px" text="" visible="false"/>
            <Text profile="fmDesc" id="favor2desc" position="-420px -180px" text="" visible="false"/>
            <Text profile="fmTime" id="favor2time" position="-420px -200px" text="" visible="false"/>
            <Text profile="fmReward" id="favor2reward" position="-420px -215px" text="" visible="false"/>
            <Button profile="fmButton" id="favor2view" position="300px -160px" text="View" onClick="onClickFavor2View" visible="false"/>
            <Button profile="fmButtonRed" id="favor2cancel" position="385px -160px" text="Cancel" onClick="onClickFavor2Cancel" visible="false"/>
            <Button profile="fmButton" id="favor2goto" position="300px -190px" text="Go To" onClick="onClickFavor2Goto" visible="false"/>
            <Button profile="fmButtonGreen" id="favor2complete" position="385px -190px" text="Done" onClick="onClickFavor2Complete" visible="false"/>

            <!-- ===== FAVOR ROW 3 ===== -->
            <Bitmap profile="fmRowBg" id="favor3bg" position="0px -240px" visible="false"/>
            <Text profile="fmNPCName" id="favor3npc" position="-420px -245px" text="" visible="false"/>
            <Text profile="fmDesc" id="favor3desc" position="-420px -265px" text="" visible="false"/>
            <Text profile="fmTime" id="favor3time" position="-420px -285px" text="" visible="false"/>
            <Text profile="fmReward" id="favor3reward" position="-420px -300px" text="" visible="false"/>
            <Button profile="fmButton" id="favor3view" position="300px -245px" text="View" onClick="onClickFavor3View" visible="false"/>
            <Button profile="fmButtonRed" id="favor3cancel" position="385px -245px" text="Cancel" onClick="onClickFavor3Cancel" visible="false"/>
            <Button profile="fmButton" id="favor3goto" position="300px -275px" text="Go To" onClick="onClickFavor3Goto" visible="false"/>
            <Button profile="fmButtonGreen" id="favor3complete" position="385px -275px" text="Done" onClick="onClickFavor3Complete" visible="false"/>

            <!-- ===== FAVOR ROW 4 ===== -->
            <Bitmap profile="fmRowBg" id="favor4bg" position="0px -325px" visible="false"/>
            <Text profile="fmNPCName" id="favor4npc" position="-420px -330px" text="" visible="false"/>
            <Text profile="fmDesc" id="favor4desc" position="-420px -350px" text="" visible="false"/>
            <Text profile="fmTime" id="favor4time" position="-420px -370px" text="" visible="false"/>
            <Text profile="fmReward" id="favor4reward" position="-420px -385px" text="" visible="false"/>
            <Button profile="fmButton" id="favor4view" position="300px -330px" text="View" onClick="onClickFavor4View" visible="false"/>
            <Button profile="fmButtonRed" id="favor4cancel" position="385px -330px" text="Cancel" onClick="onClickFavor4Cancel" visible="false"/>
            <Button profile="fmButton" id="favor4goto" position="300px -360px" text="Go To" onClick="onClickFavor4Goto" visible="false"/>
            <Button profile="fmButtonGreen" id="favor4complete" position="385px -360px" text="Done" onClick="onClickFavor4Complete" visible="false"/>

            <!-- ===== FAVOR ROW 5 ===== -->
            <Bitmap profile="fmRowBg" id="favor5bg" position="0px -410px" visible="false"/>
            <Text profile="fmNPCName" id="favor5npc" position="-420px -415px" text="" visible="false"/>
            <Text profile="fmDesc" id="favor5desc" position="-420px -435px" text="" visible="false"/>
            <Text profile="fmTime" id="favor5time" position="-420px -455px" text="" visible="false"/>
            <Text profile="fmReward" id="favor5reward" position="-420px -470px" text="" visible="false"/>
            <Button profile="fmButton" id="favor5view" position="300px -415px" text="View" onClick="onClickFavor5View" visible="false"/>
            <Button profile="fmButtonRed" id="favor5cancel" position="385px -415px" text="Cancel" onClick="onClickFavor5Cancel" visible="false"/>
            <Button profile="fmButton" id="favor5goto" position="300px -445px" text="Go To" onClick="onClickFavor5Goto" visible="false"/>
            <Button profile="fmButtonGreen" id="favor5complete" position="385px -445px" text="Done" onClick="onClickFavor5Complete" visible="false"/>

            <!-- ===== FOOTER DIVIDER ===== -->
            <Bitmap profile="fmDivider" position="0px -495px"/>

            <!-- ===== FOOTER AREA ===== -->
            <Text profile="fmFooter" id="footerText" position="0px -510px" text="Cancel reduces relationship by 10"/>

            <!-- ===== CLOSE BUTTON ===== -->
            <GuiElement profile="fs25_dialogButtonBox">
                <Button profile="buttonOK" id="closeButton" onClick="onClickClose" text="$l10n_button_close"/>
            </GuiElement>

        </GuiElement>
    </GuiElement>

    <!-- ===== CUSTOM GUI PROFILES ===== -->
    <GUIProfiles>
        <!-- ===== TITLE & SUBTITLE ===== -->
        <Profile name="fmTitle" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="850px 22px"/>
            <textSize value="18px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
            <textAlignment value="center"/>
        </Profile>
        <Profile name="fmSubtitle" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="850px 16px"/>
            <textSize value="13px"/>
            <textColor value="0.7 0.7 0.7 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ===== DIVIDERS ===== -->
        <Profile name="fmDivider" extends="baseReference" with="anchorTopCenter">
            <size value="850px 1px"/>
            <imageColor value="0.25 0.3 0.35 0.8"/>
        </Profile>

        <!-- ===== FAVOR ROW BACKGROUND ===== -->
        <Profile name="fmRowBg" extends="baseReference" with="anchorTopCenter">
            <size value="850px 80px"/>
            <imageColor value="0.08 0.09 0.12 0.6"/>
        </Profile>

        <!-- ===== TEXT ELEMENTS ===== -->
        <Profile name="fmNPCName" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="600px 18px"/>
            <textSize value="14px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
            <textAlignment value="left"/>
        </Profile>
        <Profile name="fmDesc" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="600px 16px"/>
            <textSize value="12px"/>
            <textColor value="0.85 0.85 0.85 1"/>
            <textAlignment value="left"/>
        </Profile>
        <Profile name="fmTime" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="290px 16px"/>
            <textSize value="11px"/>
            <textColor value="0.7 0.7 0.7 1"/>
            <textAlignment value="left"/>
        </Profile>
        <Profile name="fmReward" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="290px 16px"/>
            <textSize value="11px"/>
            <textBold value="true"/>
            <textColor value="0.3 0.9 0.3 1"/>
            <textAlignment value="left"/>
        </Profile>

        <!-- ===== BUTTONS ===== -->
        <Profile name="fmButton" extends="buttonOK">
            <size value="75px 22px"/>
            <imageColor value="0.12 0.2 0.35 0.95"/>
        </Profile>
        <Profile name="fmButtonRed" extends="buttonCancel">
            <size value="75px 22px"/>
            <imageColor value="0.35 0.12 0.12 0.95"/>
        </Profile>
        <Profile name="fmButtonGreen" extends="buttonOK">
            <size value="75px 22px"/>
            <imageColor value="0.12 0.35 0.12 0.95"/>
        </Profile>

        <!-- ===== FOOTER ===== -->
        <Profile name="fmFooter" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="850px 16px"/>
            <textSize value="11px"/>
            <textColor value="0.45 0.5 0.6 1"/>
            <textAlignment value="center"/>
        </Profile>
    </GUIProfiles>
</GUI>
